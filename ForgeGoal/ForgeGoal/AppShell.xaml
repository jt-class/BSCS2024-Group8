<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="ForgeGoal.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:ForgeGoal.Views"
    Shell.FlyoutBehavior="Disabled"
    Title="ForgeGoal">

    <ShellContent
        Title="Signup Page"
        ContentTemplate="{DataTemplate views:SignUpPage}"
        Route="MainPage" />
    <ShellContent
        Title="Login Page"
        ContentTemplate="{DataTemplate views:LoginPage}"/>
    <ShellContent
        Title="Terms of Services Page"
        ContentTemplate="{DataTemplate views:TermsServicesPage}"/>
</Shell>
